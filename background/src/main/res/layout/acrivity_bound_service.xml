<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        tools:context=".services.bound_service.BoundServiceActivity">

        <Button
            android:id="@+id/bound_service"
            style="@style/ServiceButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запустить Bound Service" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.dp"
            android:layout_marginStart="12.dp"
            android:layout_marginEnd="12.dp"
            android:max="100"
            android:progress="0"
            tools:progress="30"/>

        <org.billthefarmer.markdown.MarkdownView
            android:id="@+id/markdown"
            style="@style/InfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>