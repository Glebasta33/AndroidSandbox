<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BundleActivity">


    <TextView
        android:id="@+id/text_view_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_counter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/send_data__button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start activity and send data in bundle" />


    <org.billthefarmer.markdown.MarkdownView
        android:id="@+id/markdown1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>